<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>Arachnoid_Cocoon</defName>
    <label>arachnoid cocoon</label>
    <description>A tightly spun cocoon of webbing. Something is inside.</description>

    <thingClass>Arachnoids.Building_ArachnoidCocoon</thingClass>

    <!-- IMPORTANT: make the cocoon tick so it can drive contained pawn progression -->
    <tickerType>Rare</tickerType>

    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>30</pathCost>

    <!-- Not player-buildable -->
    <designationCategory></designationCategory>

    <useHitPoints>true</useHitPoints>
    <fillPercent>0.2</fillPercent>

    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>0</Flammability>
      <Beauty>-2</Beauty>
    </statBases>

    <size>(1,1)</size>

    <graphicData>
      <texPath>Things/Building/Arachnoids/Cocoon_1</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.5,1.5)</drawSize>
    </graphicData>

    <modExtensions>
      <li Class="Arachnoids.DefModExt_CocoonGraphics">
        <texPathEarly>Things/Building/Arachnoids/Cocoon_1</texPathEarly>
        <texPathLate>Things/Building/Arachnoids/Cocoon_2</texPathLate>
      </li>
    </modExtensions>

    <!-- No special inspector tabs -->

  </ThingDef>

</Defs>