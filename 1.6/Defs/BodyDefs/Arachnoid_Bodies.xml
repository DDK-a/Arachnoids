<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- =========================================================
       BODY DEF: Arachnoid Spider Anatomy (balanced coverage)
  ============================================================ -->
  <BodyDef>
    <defName>ArachnoidBody</defName>
    <label>arachnoid</label>
    <corePart>
      <def>Shell</def>
      <height>Middle</height>
      <depth>Outside</depth>
      <parts>

        <!-- Cephalothorax -->
        <li>
          <def>Arachnoid_Cephalothorax</def>
          <height>Top</height>
          <depth>Outside</depth>
          <coverage>0.5</coverage>
          <parts>
            <li>
              <def>InsectHead</def>
              <coverage>0.25</coverage>
              <groups>
                <li>HeadAttackTool</li>
              </groups>
              <parts>
                <li>
                  <def>Brain</def>
                  <coverage>0.12</coverage>
                  <depth>Inside</depth>
                </li>
                <!-- 8 eyes -->
                <li><def>Eye</def><customLabel>outer front left eye</customLabel><coverage>0.01</coverage></li>
                <li><def>Eye</def><customLabel>outer front right eye</customLabel><coverage>0.01</coverage></li>
                <li><def>Eye</def><customLabel>inner front left eye</customLabel><coverage>0.01</coverage></li>
                <li><def>Eye</def><customLabel>inner front right eye</customLabel><coverage>0.01</coverage></li>
                <li><def>Eye</def><customLabel>outer back left eye</customLabel><coverage>0.01</coverage></li>
                <li><def>Eye</def><customLabel>outer back right eye</customLabel><coverage>0.01</coverage></li>
                <li><def>Eye</def><customLabel>inner back left eye</customLabel><coverage>0.01</coverage></li>
                <li><def>Eye</def><customLabel>inner back right eye</customLabel><coverage>0.01</coverage></li>
                <li>
                  <def>InsectMouth</def>
                  <coverage>0.05</coverage>
                  <groups><li>Mouth</li></groups>
                </li>
              </parts>
            </li>
            <!-- Pedipalps -->
            <li><def>Arachnoid_LeftPedipalp</def><coverage>0.03</coverage><height>Bottom</height></li>
            <li><def>Arachnoid_RightPedipalp</def><coverage>0.03</coverage><height>Bottom</height></li>
            <!-- 8 legs -->
            <li><def>InsectLeg</def><customLabel>front left leg</customLabel><coverage>0.03</coverage></li>
            <li><def>InsectLeg</def><customLabel>front right leg</customLabel><coverage>0.03</coverage></li>
            <li><def>InsectLeg</def><customLabel>middle left leg</customLabel><coverage>0.03</coverage></li>
            <li><def>InsectLeg</def><customLabel>middle right leg</customLabel><coverage>0.03</coverage></li>
            <li><def>Arachnoid_SecondMiddleLeftLeg</def><coverage>0.03</coverage></li>
            <li><def>Arachnoid_SecondMiddleRightLeg</def><coverage>0.03</coverage></li>
            <li><def>InsectLeg</def><customLabel>rear left leg</customLabel><coverage>0.03</coverage></li>
            <li><def>InsectLeg</def><customLabel>rear right leg</customLabel><coverage>0.03</coverage></li>
          </parts>
        </li>

        <!-- Abdomen -->
        <li>
          <def>Arachnoid_Abdomen</def>
          <height>Top</height>
          <depth>Outside</depth>
          <coverage>0.25</coverage>
          <parts>
            <li><def>InsectHeart</def><coverage>0.03</coverage><depth>Inside</depth></li>
            <li><def>Stomach</def><coverage>0.05</coverage><depth>Inside</depth></li>
            <li><def>Arachnoid_Spinneret</def><coverage>0.07</coverage><height>Bottom</height></li>
          </parts>
        </li>
      </parts>
    </corePart>
  </BodyDef>

  <!-- =========================================================
       Individual Body Parts
  ============================================================ -->
  <BodyPartDef>
    <defName>Arachnoid_Spinneret</defName>
    <label>spinneret</label>
    <hitPoints>10</hitPoints>
    <skinCovered>false</skinCovered>
  </BodyPartDef>

  <BodyPartDef>
    <defName>Arachnoid_Cephalothorax</defName>
    <label>cephalothorax</label>
    <hitPoints>30</hitPoints>
    <skinCovered>false</skinCovered>
    <tags>
      <li>BreathingPathway</li>
      <li>EatingPathway</li>
      <li>TalkingPathway</li>
    </tags>
  </BodyPartDef>

  <BodyPartDef>
    <defName>Arachnoid_Abdomen</defName>
    <label>abdomen</label>
    <hitPoints>40</hitPoints>
    <skinCovered>false</skinCovered>
    <tags><li>MetabolismSource</li></tags>
  </BodyPartDef>

  <BodyPartDef>
    <defName>Arachnoid_LeftPedipalp</defName>
    <label>left pedipalp</label>
    <hitPoints>12</hitPoints>
    <skinCovered>false</skinCovered>
    <tags><li>ManipulationLimbCore</li></tags>
  </BodyPartDef>

  <BodyPartDef>
    <defName>Arachnoid_RightPedipalp</defName>
    <label>right pedipalp</label>
    <hitPoints>12</hitPoints>
    <skinCovered>false</skinCovered>
    <tags><li>ManipulationLimbCore</li></tags>
  </BodyPartDef>

  <BodyPartDef>
    <defName>Arachnoid_SecondMiddleLeftLeg</defName>
    <label>second middle left leg</label>
    <hitPoints>15</hitPoints>
    <skinCovered>false</skinCovered>
    <tags><li>MovingLimbCore</li></tags>
  </BodyPartDef>

  <BodyPartDef>
    <defName>Arachnoid_SecondMiddleRightLeg</defName>
    <label>second middle right leg</label>
    <hitPoints>15</hitPoints>
    <skinCovered>false</skinCovered>
    <tags><li>MovingLimbCore</li></tags>
  </BodyPartDef>

</Defs>
